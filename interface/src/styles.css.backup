:root {
  font-family: "Manrope", system-ui, -apple-system, sans-serif;
  color: #1a1a1a;
  background: linear-gradient(to right, #6a11cb 0%, #2575fc 100%);
}

* { box-sizing: border-box; }

body {
  margin: 0;
  background: linear-gradient(to right, #6a11cb 0%, #2575fc 100%);
  min-height: 100vh;
}

.app-shell {
  max-width: 1400px;
  margin: 0 auto;
  padding: 24px;
}

.topbar {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 16px;
  margin-bottom: 24px;
}

.topbar > div:first-child {
  color: white;
}

.eyebrow {
  text-transform: uppercase;
  letter-spacing: 0.1em;
  font-size: 11px;
  margin: 0;
  color: rgba(255, 255, 255, 0.85);
  font-weight: 600;
}

.topbar h1 {
  margin: 8px 0 4px 0;
  font-size: 32px;
  font-weight: 700;
  color: white;
}

.meta {
  margin: 0;
  color: rgba(255, 255, 255, 0.75);
  font-size: 14px;
}

.badges {
  display: flex;
  align-items: center;
  gap: 8px;
  flex-wrap: wrap;
}

.badge {
  padding: 6px 12px;
  border-radius: 999px;
  font-size: 12px;
  font-weight: 500;
  border: 1px solid rgba(255, 255, 255, 0.2);
  -webkit-backdrop-filter: blur(10px);
  backdrop-filter: blur(10px);
}

.badge.info {
  background: rgba(255, 255, 255, 0.25);
  color: white;
  border-color: rgba(255, 255, 255, 0.3);
}

.badge.neutral {
  background: rgba(255, 255, 255, 0.15);
  color: white;
  border-color: rgba(255, 255, 255, 0.25);
}

.layout {
  display: grid;
  grid-template-columns: 3fr 2fr;
  gap: 20px;
}

.chat-panel {
  background: white;
  border: none;
  border-radius: 20px;
  padding: 20px;
  display: flex;
  flex-direction: column;
  min-height: 80vh;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
}

.filters {
  border-bottom: 1px solid #e5e7eb;
  padding-bottom: 16px;
  margin-bottom: 12px;
}

.filter-fields {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
  gap: 10px;
}

.filter-fields input {
  padding: 11px 14px;
  border-radius: 10px;
  border: 1px solid #d1d5db;
  background: #f9fafb;
  font-size: 14px;
  transition: all 0.2s;
  font-family: inherit;
}

.filter-fields input:focus {
  outline: none;
  border-color: #8b5cf6;
  background: white;
  box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.1);
}

.chips {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  align-items: center;
  margin-top: 12px;
}

.chip {
  border: 1px solid #e5e7eb;
  background: white;
  border-radius: 999px;
  padding: 7px 14px;
  cursor: pointer;
  font-size: 13px;
  font-weight: 500;
  transition: all 0.2s;
  color: #374151;
}

.chip:hover {
  background: #f3f4f6;
  border-color: #8b5cf6;
  color: #8b5cf6;
  transform: translateY(-1px);
}

.applied {
  color: #6b7280;
  font-size: 13px;
  margin-left: 8px;
}

.status-bar {
  display: flex;
  gap: 8px;
  margin-bottom: 16px;
  padding: 12px;
  background: linear-gradient(to right, #6a11cb15 0%, #2575fc15 100%);
  border-radius: 12px;
}

.stage {
  padding: 8px 14px;
  border-radius: 999px;
  background: #f3f4f6;
  color: #6b7280;
  font-size: 13px;
  font-weight: 500;
  transition: all 0.3s;
}

.stage.active {
  background: linear-gradient(to right, #6a11cb 0%, #2575fc 100%);
  color: white;
  transform: scale(1.05);
  box-shadow: 0 4px 12px rgba(37, 117, 252, 0.4);
}

.messages {
  flex: 1;
  overflow-y: auto;
  padding: 8px 4px;
  display: flex;
  flex-direction: column;
  gap: 14px;
}

.bubble {
  border-radius: 16px;
  padding: 14px 16px;
  border: 1px solid #e5e7eb;
  background: white;
  max-width: 100%;
  animation: slideIn 0.3s ease-out;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.bubble.user {
  background: linear-gradient(to right, #6a11cb 0%, #2575fc 100%);
  border: none;
  color: white;
  margin-left: 40px;
}

.bubble.assistant {
  margin-right: 40px;
}

.bubble-text {
  margin: 0 0 8px 0;
  white-space: pre-wrap;
  line-height: 1.6;
}

.bubble.user .bubble-text {
  margin-bottom: 0;
}

.response-block {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.meta-line {
  color: #6b7280;
  font-size: 13px;
}

.citations {
  display: flex;
  gap: 6px;
  flex-wrap: wrap;
}

.citation {
  border: 1px solid #d1d5db;
  background: #f9fafb;
  border-radius: 999px;
  padding: 6px 12px;
  cursor: pointer;
  font-size: 12px;
  font-weight: 500;
  color: #6b5ce7;
  transition: all 0.2s;
}

.citation:hover {
  background: #f3f4f6;
  border-color: #8b5cf6;
  transform: translateY(-1px);
  box-shadow: 0 2px 8px rgba(139, 92, 246, 0.15);
}

.results {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.result-card {
  border: 1px solid #e5e7eb;
  border-radius: 14px;
  padding: 14px 16px;
  background: #fafafa;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 12px;
  transition: all 0.2s;
}

.result-card:hover {
  border-color: #8b5cf6;
  box-shadow: 0 4px 12px rgba(139, 92, 246, 0.1);
  transform: translateY(-2px);
}

.result-title {
  margin: 0 0 6px 0;
  font-weight: 600;
  font-size: 15px;
  color: #111827;
}

.result-meta {
  margin: 2px 0;
  color: #6b7280;
  font-size: 13px;
}

.actions {
  display: flex;
  gap: 8px;
  align-items: center;
  flex-shrink: 0;
}

.primary {
  background: linear-gradient(to right, #6a11cb 0%, #2575fc 100%);
  color: white;
  border: none;
  border-radius: 10px;
  padding: 10px 16px;
  cursor: pointer;
  font-weight: 600;
  font-size: 14px;
  box-shadow: 0 4px 14px rgba(37, 117, 252, 0.4);
  transition: all 0.2s;
}

.primary:hover:not(:disabled) {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(37, 117, 252, 0.5);
}

.primary:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.ghost {
  background: white;
  border: 1px solid #d1d5db;
  color: #374151;
  border-radius: 10px;
  padding: 10px 16px;
  cursor: pointer;
  font-weight: 500;
  font-size: 14px;
  text-decoration: none;
  display: inline-block;
  transition: all 0.2s;
}

.ghost:hover {
  background: #f9fafb;
  border-color: #8b5cf6;
  color: #8b5cf6;
}

.composer {
  display: flex;
  gap: 10px;
  padding-top: 16px;
  border-top: 1px solid #e5e7eb;
}

.composer textarea {
  flex: 1;
  border: 1px solid #d1d5db;
  border-radius: 12px;
  padding: 14px;
  font-size: 15px;
  resize: vertical;
  min-height: 80px;
  font-family: inherit;
  transition: all 0.2s;
}

.composer textarea:focus {
  outline: none;
  border-color: #8b5cf6;
  box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.1);
}

.viewer {
  background: white;
  border: none;
  border-radius: 20px;
  min-height: 80vh;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.viewer-body {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.viewer-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px 18px;
  border-bottom: 1px solid #e5e7eb;
  gap: 12px;
}

.viewer-header h3 {
  margin: 0;
  font-size: 16px;
  font-weight: 600;
  color: #111827;
}

.pdf-frame {
  width: 100%;
  height: calc(100% - 60px);
  border: none;
}

.viewer-empty {
  padding: 40px 24px;
  color: #6b7280;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.viewer-empty p {
  font-size: 15px;
}

.error {
  color: #dc2626;
  margin: 0;
  padding: 10px 14px;
  background: #fee2e2;
  border-radius: 8px;
  font-size: 14px;
}

.footer {
  text-align: center;
  padding: 24px 0 12px 0;
  margin-top: 20px;
}

.footer p {
  margin: 0;
  font-size: 11px;
  color: rgba(255, 255, 255, 0.6);
  font-weight: 400;
}

@media (max-width: 1024px) {
  .layout {
    grid-template-columns: 1fr;
  }
  .viewer {
    height: 60vh;
  }
  .bubble.user {
    margin-left: 0;
  }
  .bubble.assistant {
    margin-right: 0;
  }
}

@media (max-width: 640px) {
  .app-shell {
    padding: 16px;
  }

  .topbar {
    flex-direction: column;
    gap: 16px;
  }

  .topbar h1 {
    font-size: 26px;
  }

  .composer {
    flex-direction: column;
  }

  .actions {
    flex-wrap: wrap;
  }

  .filter-fields {
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
  }

  .result-card {
    flex-direction: column;
  }
}
